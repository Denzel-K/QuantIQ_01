<script>
  const chart_switch = document.querySelector('.chart_switch');
  const switch_1 = document.querySelector('.switch_1');
  const switch_2 = document.querySelector('.switch_2');
  const switch_3 = document.querySelector('.switch_3');
  const switch_4 = document.querySelector('.switch_4');
  const switch_5 = document.querySelector('.switch_5');

  switch_1.addEventListener('click', () => {
    chart_switch.innerHTML = `
      <div class="chart_1"><img src="assets/Bar-chart.png" alt="chart"></div>
    `;
    
    switch_1.classList.add('current_chart');
    switch_2.classList.remove('current_chart');
    switch_3.classList.remove('current_chart');
    switch_4.classList.remove('current_chart');
    switch_5.classList.remove('current_chart');
  });

  switch_2.addEventListener('click', () => {
    chart_switch.innerHTML = `
      <div class="chart_2"><img src="assets/Line-chart.png" alt="chart"></div>
    `;

    switch_2.classList.add('current_chart');
    switch_1.classList.remove('current_chart');
    switch_3.classList.remove('current_chart');
    switch_4.classList.remove('current_chart');
    switch_5.classList.remove('current_chart');
  });

  switch_3.addEventListener('click', () => {
    chart_switch.innerHTML = `
      <div class="chart_3"><img src="assets/Bar-line-combo.png" alt="chart"></div>
    `;

    switch_3.classList.add('current_chart');
    switch_2.classList.remove('current_chart');
    switch_1.classList.remove('current_chart');
    switch_4.classList.remove('current_chart');
    switch_5.classList.remove('current_chart');
  });

  switch_4.addEventListener('click', () => {
    chart_switch.innerHTML = `
      <div class="chart_4"><img src="assets/Bubble-chart.png" alt="chart"></div>
    `;

    switch_4.classList.add('current_chart');
    switch_2.classList.remove('current_chart');
    switch_3.classList.remove('current_chart');
    switch_1.classList.remove('current_chart');
    switch_5.classList.remove('current_chart');
  });

  switch_5.addEventListener('click', () => {
    chart_switch.innerHTML = `
      <div class="chart_5"><img src="assets/Smooth-line-chart-drawtime.png" alt="chart"></div>
    `;
    
    switch_5.classList.add('current_chart');
    switch_2.classList.remove('current_chart');
    switch_3.classList.remove('current_chart');
    switch_4.classList.remove('current_chart');
    switch_1.classList.remove('current_chart');
  });
</script>